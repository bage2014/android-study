<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/exo_back_icon"
        android:layout_width="@dimen/icon_width_big"
        android:layout_height="@dimen/icon_width_big"
        android:layout_gravity="top|left"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp" />

    <ImageButton
        android:id="@id/exo_play"
        android:layout_width="@dimen/icon_width_big"
        android:layout_height="@dimen/icon_width_big"
        android:layout_gravity="center"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_exo_play" />

    <ImageButton
        android:id="@id/exo_pause"
        android:layout_width="@dimen/icon_width_big"
        android:layout_height="@dimen/icon_width_big"
        android:layout_gravity="center"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_exo_pause" />


    <ImageButton
        android:id="@+id/exo_fullscreen_icon"
        android:layout_width="@dimen/icon_width_big"
        android:layout_height="@dimen/icon_width_big"
        android:layout_gravity="bottom|right"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_exo_fullscreen_enter" />

</FrameLayout>